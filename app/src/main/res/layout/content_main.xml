<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alfhanrf.inputdatafirebase.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/fungsitxt"
        android:text="Bangungan Berdasarkan Fungsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_below="@+id/fungsitxt"
        android:id="@+id/fungsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/fungsi"
        android:prompt="@array/fungsi">
    </Spinner>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/jenistxt"
        android:text="Bangungan Berdasarkan Jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fungsi"/>

    <Spinner
        android:layout_below="@+id/jenistxt"
        android:id="@+id/jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:paddingTop="20dp"
        android:layout_below="@+id/jenis"
        android:id="@+id/pergunakantxt"
        android:text="Bangungan Berdasarkan Fungsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_below="@+id/pergunakantxt"
        android:id="@+id/pergunakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>


    <Button
        android:layout_margin="100dp"
        android:layout_below="@+id/pergunakan"
        android:id="@+id/input"
        android:text="Input data to Firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/masukfirebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="masukfirebase" />


</RelativeLayout>
